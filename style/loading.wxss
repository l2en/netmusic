.loader {
  width: 250px;
  height: 50px;
  line-height: 50px;
  text-align: center;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  font-family: helvetica, arial, sans-serif;
  text-transform: uppercase;
  font-weight: 900;
  color: #ce4233;
  letter-spacing: 0.2em;
  font-size: 24rpx;
  top: 50%;
}
.loader::after {
  content: "";
  display: block;
  width: 15px;
  height: 3px;
  background: #ce4233;
  position: absolute;
  animation: load 1s infinite ease-in-out;
}

.loader::after {
  bottom: 0;
}

@keyframes load {
  0% {
    left: 0;
    width: 0;
  }
  50% {
    width:30%;
  }
  100% {
    left: 235px;
    width: 0;
  }
}