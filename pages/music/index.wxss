/* pages/play/index.wxss */
.iconSize{
  width: 50rpx;
  height: 50rpx;
}

.music-player-container{
  width: 100%;
  height: 100vh;
  display: block;
  overflow: hidden;
  box-sizing: border-box;
  padding: 10rpx;
  background-color: rgb(217,217,217)
}
/* 顶部poster */
.music-player-coverPoster{
  border: 1px #eee solid;
  border-radius: 10rpx;
  overflow: hidden;
  height: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.music-player-posterImg{
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 30px 30px rgba(0,0,0,.5);
  width: 90%;
  height: 90%;
}
/* 歌词 */
.music-player-lrc{
  height: 28%;
  border: 1px #eee solid;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: 10rpx;
  background-color: #fff;
  text-align: center;
  font-size: 26rpx;
  padding: 10rpx 0 10rpx 0;
  box-sizing: border-box;
}
.lrc{
  display: block;
}
/* 控制 */
.music-player-controller{
  margin-top:10rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background-color: #fff;
  padding: 20rpx;
  height: 20%;
  box-sizing: border-box;
}
.music-player-controller-left{
  height: 100%;
  text-align: center;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  float: left;
  width: 100rpx;
}
.music-player-controller-poster{
  width: 100rpx;
  height: 100rpx;
  overflow: hidden;
  border-radius: 50%;
  display: block;
}

.music-player-controller-right{
  height: 100%;
  float: left;
  width: calc(100% - 100rpx);
  box-sizing: border-box;
  padding-left: 30rpx;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.music-player-controller-right-songName{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}
.music-player-controller-right-slider{
  padding:0;
  margin:0;
  margin-top: 20rpx;
}
.music-player-controller-right-time{
  width: 100%;
  display: flex;
  height: 30rpx;
  align-items: center;
  justify-content: space-between;
}
.music-player-controller-right-songContorller{
  display: flex;
  width: 100%;
  justify-content: space-evenly;
  position: relative;
  bottom: 0
}
