/* banner */
.index-swiper{
  height: 400rpx;
}
/* 主体 */
.index-main{
  height: calc(100vh - 400rpx);
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.index-main-item{
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
}
.index-main-item-titleName{
  font-size: 26rpx;
}
/* 搜索 */
.search{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 50rpx;
  bottom: 50rpx;
  background: rgba(202, 33, 0, 0.9);
  box-shadow: 0 0 20rpx #000;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  z-index: 2;
  color: #fff;
}
.search-icon{
  font-size: 40rpx;
}

.animationUp{
  animation: up .3s forwards;
}
.animationDown{
  animation:down .3s forwards;
}
@keyframes up{
 from {bottom: -120rpx;}
  to {bottom: 50rpx;}
}
@keyframes down{
  from {bottom: 50rpx;}
  to {bottom: -120rpx;}
}